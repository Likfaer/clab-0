#include <iostream>
#include <cmath>

int main()
{
    double a;
    double b;
    double c;
    double x;
    cout << "Введите a,b,c: ";
    cin >> a;
    cin >> b;
    cin >> c;
    if((b*b - 4*a*c) >= 0)
    {
        x = ( -1*b + sqrt(b*b - 4*a*c) ) / (2 * a);
        cout << "X1: " << x << endl;
        x = ( -1*b - sqrt(b*b - 4*a*c) ) / (2 * a);
        cout << "X2: " << x << endl;
    }
    else
    {
        cout << "Дискриминант < 0, корни отсутствуют" << endl;
    }
 
    return 0;
}
